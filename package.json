{
  "name": "openmargonem",
  "version": "0.0.1",
  "description": "Free and open source margonem scripts",
  "main": "build.js",
  "scripts": {
    "build": "node build.js && cat openmargonem.base.user.js > public/openmargonem.user.js && cat public/bundle.js >> public/openmargonem.user.js",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 110
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "."
  },
  "author": "",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "esbuild": "^0.21.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
    "@eslint/js": "^9.3.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0"
  }
}
